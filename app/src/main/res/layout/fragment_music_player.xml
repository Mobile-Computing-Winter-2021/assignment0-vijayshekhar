<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.MusicPlayerFragment">


    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/thumbnail" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/play_pause_switch"
            android:layout_marginHorizontal="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@drawable/ic_baseline_play_arrow_24"
            android:buttonTint="@android:color/holo_orange_dark"
            android:thumb="@null"
            app:track="@null" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/downloaded_file_play_pause_switch"
            android:layout_width="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="50dp"
            android:button="@drawable/ic_baseline_play_arrow_24"
            android:buttonTint="@color/purple_700"
            android:thumb="@null"
            app:track="@null" />

    </LinearLayout>


    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="20dp"
        android:text="Not playing any file"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/download_song_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Get new songs"
        android:textAllCaps="false" />

</LinearLayout>