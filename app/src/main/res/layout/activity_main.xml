<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="217dp"
        android:layout_height="20dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="95dp"
        android:text="Selected Sensor Data:"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_result_textview" />

    <TextView
        android:id="@+id/data_view"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="37dp"
        android:text="data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Accelerometer"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/gpss"
        android:layout_width="89dp"
        android:layout_height="0dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="@+id/accs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temps"
        app:layout_constraintTop_toTopOf="@+id/accs" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lin_accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="2dp"
        android:text="linear-acceleration"
        app:layout_constraintEnd_toStartOf="@+id/lights"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="23dp"
        android:text="Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lin_accs"
        app:layout_constraintTop_toBottomOf="@+id/gpss" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Temperature"
        app:layout_constraintStart_toStartOf="@+id/lin_accs"
        app:layout_constraintTop_toBottomOf="@+id/lin_accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/proxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="38dp"
        android:text="Proximity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lights" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Motion Status:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/motion_status"
        app:layout_constraintEnd_toEndOf="@+id/temps"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/motion_status" />

    <TextView
        android:id="@+id/motion_status"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="45dp"
        android:text="status"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/data_view"
        app:layout_constraintStart_toEndOf="@+id/temp_avg_button"
        app:layout_constraintTop_toBottomOf="@+id/temp_result_textview" />

    <TextView
        android:id="@+id/temp_result_textview"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="209dp"
        android:text="_______"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/temp_avg_button" />

    <TextView
        android:id="@+id/acc_result_textview"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="184dp"
        android:text="_______"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acc_avg_button"
        app:layout_constraintTop_toBottomOf="@+id/lights" />

    <Button
        android:id="@+id/acc_avg_button"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="78dp"
        android:text="accelerometer"
        app:layout_constraintBottom_toBottomOf="@+id/temp_avg_button"
        app:layout_constraintEnd_toStartOf="@+id/acc_result_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avg_title_text" />

    <Button
        android:id="@+id/temp_avg_button"
        android:layout_width="164dp"
        android:layout_height="39dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="32dp"
        android:text="temperature"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/temp_result_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_result_textview" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/acc_avg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avg_title_text">

        <RadioButton
            android:id="@+id/x_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X axis"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/y_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y axis"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/z_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z axis"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/all_checkbox"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Axes" />

    </RadioGroup>

    <TextView
        android:id="@+id/avg_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Past 1 hour average"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/temps" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Sensors switch"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>