<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/acc_avg_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="32dp"
        android:text="accelerometer"
        app:layout_constraintBottom_toTopOf="@+id/temp_avg_button"
        app:layout_constraintEnd_toEndOf="@+id/temp_avg_button"
        app:layout_constraintStart_toStartOf="@+id/temp_avg_button"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/temp_avg_button"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="34dp"
        android:text="temperature"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/temp_result_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:text="_______"
        app:layout_constraintBottom_toBottomOf="@+id/temp_avg_button"
        app:layout_constraintEnd_toEndOf="@+id/acc_result_textview"
        app:layout_constraintStart_toStartOf="@+id/motion_status"
        app:layout_constraintTop_toTopOf="@+id/temp_avg_button" />

    <TextView
        android:id="@+id/acc_result_textview"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="30dp"
        android:text="_______"
        app:layout_constraintBottom_toTopOf="@+id/temp_result_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acc_avg_button"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Accelerometer"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lin_accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="linear-acceleration"
        app:layout_constraintBaseline_toBaselineOf="@+id/lights"
        app:layout_constraintEnd_toStartOf="@+id/lights"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/avg_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Past 1 hour average"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/temps"
        app:layout_constraintTop_toBottomOf="@+id/temps" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="11dp"
        android:text="Temperature"
        app:layout_constraintEnd_toEndOf="@+id/accs"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/lin_accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="24dp"
        android:text="Light"
        app:layout_constraintBottom_toTopOf="@+id/proxs"
        app:layout_constraintStart_toStartOf="@+id/proxs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/gpss"
        android:layout_width="89dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="@+id/accs"
        app:layout_constraintEnd_toEndOf="@+id/proxs"
        app:layout_constraintStart_toEndOf="@+id/lin_accs"
        app:layout_constraintTop_toTopOf="@+id/accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/proxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="196dp"
        android:text="Proximity"
        app:layout_constraintBottom_toBottomOf="@+id/acc_avg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_text" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:text="Sensors switch"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="56dp"
        android:text="Motion Status:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/motion_status"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/motion_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:text="status"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="215dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/motion_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accs">

        <RadioButton
            android:id="@+id/x_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X axis"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/y_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y axis"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/z_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z axis"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="319dp" />

        <RadioButton
            android:id="@+id/all_checkbox"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Axes" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>