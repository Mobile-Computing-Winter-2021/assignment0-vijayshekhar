<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/acc_avg_button"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="60dp"
        android:text="accelerometer"
        app:layout_constraintBottom_toBottomOf="@+id/temp_avg_button"
        app:layout_constraintEnd_toEndOf="@+id/y_checkbox"
        app:layout_constraintStart_toStartOf="@+id/temp_avg_button"
        app:layout_constraintTop_toTopOf="@+id/x_checkbox" />

    <Button
        android:id="@+id/temp_avg_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="38dp"
        android:text="temperature"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/motion_status"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/temp_result_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="_________"
        app:layout_constraintBottom_toBottomOf="@+id/temp_avg_button"
        app:layout_constraintEnd_toEndOf="@+id/acc_result_textview"
        app:layout_constraintStart_toStartOf="@+id/z_checkbox"
        app:layout_constraintTop_toTopOf="@+id/temp_avg_button" />

    <TextView
        android:id="@+id/acc_result_textview"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:text="_______"
        app:layout_constraintBaseline_toBaselineOf="@+id/acc_avg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acc_avg_button" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Accelerometer"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lin_accs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:text="linear-acceleration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accs" />

    <TextView
        android:id="@+id/avg_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Past 1 hour average"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/temps"
        app:layout_constraintTop_toBottomOf="@+id/temps" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/temps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:text="Temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="14dp"
        android:text="Light"
        app:layout_constraintEnd_toEndOf="@+id/gpss"
        app:layout_constraintTop_toBottomOf="@+id/gpss" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/gpss"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginEnd="44dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="@+id/accs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/accs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/proxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Proximity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lights" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sensors switch"
        android:textColor="@android:color/holo_green_light"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/x_checkbox"
        app:layout_constraintStart_toStartOf="@+id/temps"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/y_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:text="Y axis"
        app:layout_constraintStart_toEndOf="@+id/x_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/avg_title_text" />

    <CheckBox
        android:id="@+id/x_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:text="X axis"
        app:layout_constraintStart_toStartOf="@+id/avg_title_text"
        app:layout_constraintTop_toBottomOf="@+id/avg_title_text" />

    <CheckBox
        android:id="@+id/z_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="Z axis"
        app:layout_constraintBaseline_toBaselineOf="@+id/y_checkbox"
        app:layout_constraintStart_toEndOf="@+id/y_checkbox" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="48dp"
        android:text="Motion Status:"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accs"
        app:layout_constraintStart_toStartOf="@+id/temp_avg_button" />

    <TextView
        android:id="@+id/motion_status"
        android:layout_width="131dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="55dp"
        android:text="status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>