<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="COVID_19 Precautions App"
            android:textColor="#9C27B0"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Precautions taken:"
            android:textColor="#9C27B0"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/prec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Wearing a mask when outside "
                tools:ignore= "HardcodedText"

                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/prec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Washing hands frequently"
                tools:ignore= "HardcodedText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/prec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Maintaining 2 feet distance  "
                tools:ignore= "HardcodedText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/prec4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Covering nose and mouth while sneezing and coughing "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/prec5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Taking health diets. "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="138dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="Clear"
                android:layout_marginTop="16dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                tools:ignore="MissingConstraints"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="16dp" />


            <TextView
                android:id="@+id/safetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="80dp"
                />

        </RelativeLayout>




    </LinearLayout>


</ScrollView>